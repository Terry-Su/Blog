{
  "include": ["./src/**/*", "./locale/**/*", "./.cache/**/*", "../tsblog/src/**/*"],
  "exclude": ["node_modules/**/*", "../tsblog/.cache/**/*", "../tsblog/src/__test__/**/*", "**/*.js"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@locale/*": [
        "./locale/*" 
      ],
      "@cache/*": [
        "./.cache/*" 
      ],
      "@tsblog/*": [
        "../tsblog/src/*"
      ],
      "@examples/*": [
        "../examples/src/*"
      ],
    },
    "module": "esnext",
		"target": "es5",
		"jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom" ],
    "typeRoots": [
      "node_modules/@types",
      "./src/__typings__/**/*",
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
  }
}