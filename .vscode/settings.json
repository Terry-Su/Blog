{
  "eslint.validate": [
    "javascript",
    "javascriptReact",
    "typescript",
    "typescriptReact",
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "javascript.format.enable": false,
  "eslint.format.enable": true,
  "editor.tabSize": 2,
  "importSorter.generalConfiguration.sortOnBeforeSave": true,
  "importSorter.generalConfiguration.exclude": [
    "scripts/buildLiveComponentHtmlByRemark.tsx"
  ],
  "importSorter.importStringConfiguration.hasSemicolon": false,
  "files.associations": {
    "*.md": "mdx",
    "*.js": "javascriptreact",
  },
  "files.exclude": {
    "**/.backup": true,
    "build-contents": true,
    "build-locales": true,
    "build-contents-on-other-platforms": true,
  },
}