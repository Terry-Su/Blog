{
  "include": ["src/**/*", ".cache/**/*", "../tsblog/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@tsblog/*": [
        "../tsblog/src/*"
      ],
    },
    "module": "commonJS",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016"],
    "esModuleInterop": true,
  }
}
