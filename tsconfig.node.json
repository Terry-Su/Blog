{
  "include": [
    "./tsblog.config.ts",
    "src/**/*",
    "./locale/**/*",
    "./scripts/**/*",
    ".cache/**/*",
    "./tsblog/**/*",
    "../tsblog/**/*",
    "../i18n-sync/src",
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@locale/*": ["./locale/*"],
      "@cache/*": ["./.cache/*"],
      "@tsblog/*": ["../tsblog/src/*"]
    },
    "module": "commonJS",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
